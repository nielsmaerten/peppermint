{
  "name": "peppermint",
  "version": "0.1.0-alpha",
  "description": "Earth's best wallpapers: in your Dropbox",
  "keywords": [
    "wallpapers",
    "dropbox",
    "reddit"
  ],
  "private": true,
  "main": "dist/peppermint.umd.js",
  "module": "dist/peppermint.es5.js",
  "typings": "dist/types/peppermint.d.ts",
  "files": [
    "dist"
  ],
  "author": "Niels Maerten <niels@maerten.be>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nielsmaerten/peppermint"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "postinstall": "npm run build",
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.build.json && rollup -c && rimraf compiled && typedoc --out dist/docs --target es6 --theme minimal src",
    "start": "tsc-watch --onSuccess \"rollup -c\"",
    "test": "jest",
    "test:debug": "nodemon --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --no-semi",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "devDependencies": {},
  "dependencies": {
    "@types/chai": "^4.0.3",
    "@types/jest": "^21.1.0",
    "@types/node": "^8.0.0",
    "@types/q": "^1.0.3",
    "@types/request": "^2.0.2",
    "@types/request-promise": "^4.1.37",
    "@types/sinon": "^2.3.3",
    "chai": "^4.1.1",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "cuid": "^1.3.8",
    "cz-conventional-changelog": "^2.0.0",
    "dropbox": "^2.5.7",
    "firebase": "^4.3.0",
    "firebase-admin": "^5.2.1",
    "firebase-functions": "^0.6.2",
    "firebase-mock": "^1.1.5",
    "husky": "^0.14.0",
    "inversify": "^4.3.0",
    "jest": "^21.0.2",
    "lint-staged": "^4.0.0",
    "lodash.camelcase": "^4.3.0",
    "moment": "^2.18.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "q": "^1.5.0",
    "reflect-metadata": "^0.1.10",
    "replace-in-file": "^2.5.0",
    "request-image-size": "^2.0.0",
    "request-promise": "^4.2.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.50.0",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "sinon": "^3.2.1",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.0.6",
    "tsc-watch": "^1.0.5",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^6.0.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.2",
    "validate-commit-msg": "^2.12.2"
  }
}
